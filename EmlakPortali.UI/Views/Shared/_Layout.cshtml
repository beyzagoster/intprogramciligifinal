<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmlakPortali.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/uyg03.UI.styles.css" asp-append-version="true" />
    <style>
        /* Renk paleti */
        :root {
            --primary-color: #1b1833; /* Renk 3: Koyu lacivert */
            --secondary-color: #78767c; /* Renk 4: Gri */
            --background-color: #e2e2e2; /* Renk 5: Açık gri */
        }

        /* Navbar stilleri */
        .navbar {
            background-color: var(--primary-color);
        }

        .navbar-brand,
        .nav-link {
            color: var(--secondary-color);
        }

            .navbar-brand:hover,
            .nav-link:hover {
                color: white; /* Beyaz */
            }

        /* Buton stilleri */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

            .btn-primary:hover {
                background-color: #5a5a5a; /* Koyu gri */
                border-color: #5a5a5a;
            }

        /* Ana içerik stillemeleri */
        body {
            background-color: var(--background-color);
            color: var(--primary-color);
        }

        main {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Footer stilleri */
        .footer {
            background-color: var(--primary-color);
            color: var(--secondary-color);
            padding: 1rem 0;
            text-align: center;
        }

        /* Diğer stiller */
        .color1 {
            color: #d4c1ff;
        }

        .color2 {
            color: #ffe1ff;
        }

        .color3 {
            color: #1b1833;
        }

        .color4 {
            color: #78767c;
        }

        .color5 {
            color: #e2e2e2;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmlakPortali.UI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Categories">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item NotLogined">
                            <a class="nav-link text-dark" href="/Login">Oturum Aç</a>
                        </li>
                        <li class="nav-item Logined">
                            <a class="nav-link text-dark" href="#" id="UserName"></a>
                        </li>
                        <li class="nav-item Logined">
                            <a class="nav-link text-dark" href="#" id="Logout">Oturumu Kapat</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EmlakPortali.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
